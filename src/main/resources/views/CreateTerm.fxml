<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="900" prefHeight="650"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.CreateTermController">

    <!-- ================= TOP ================= -->
    <top>
        <HBox alignment="CENTER" prefHeight="70">
            <Label text="Create Term"
                   style="-fx-font-size: 22; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <HBox spacing="40" alignment="CENTER">

            <Region prefWidth="150"/>

            <!-- FORM -->
            <VBox spacing="12" prefWidth="350">
                <TextField promptText="Type"/>
                <DatePicker promptText="Date"/>

                <TextField promptText="Start Time"/>
                <TextField promptText="End Time"/>

                <TextField promptText="Address"/>
                <TextField promptText="Capacity"/>
                <ComboBox fx:id="regionComboBox"
                          promptText="Region"
                          prefWidth="350"/>
            </VBox>

            <Region prefWidth="150"/>

        </HBox>
    </center>

    <!-- ================= BOTTOM ================= -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button text="Create"
                    prefWidth="160"/>

            <Button text="Back"
                    prefWidth="160"
                    onAction="#BackToTerm"/>
        </VBox>
    </bottom>

</BorderPane>