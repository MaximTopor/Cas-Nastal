<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.MessageController"
            prefWidth="900"
            prefHeight="600"
            styleClass="root-pane">

    <!-- ================= TOP BAR ================= -->
    <HBox prefHeight="70"
          spacing="10"
          alignment="CENTER_LEFT"
          styleClass="top-bar"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets top="10" right="20" bottom="10" left="20"/>
        </padding>

        <Label text="Správy od administrácie"
               styleClass="passport-name"/>
    </HBox>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <ScrollPane fitToWidth="true"
                AnchorPane.topAnchor="70"
                AnchorPane.bottomAnchor="120"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                style="-fx-background-color: transparent;">

        <content>
            <VBox fx:id="messagesContainer"
                  spacing="16"
                  styleClass="passport-card">

                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

            </VBox>
        </content>
    </ScrollPane>

    <!-- ================= MESSAGE INPUT ================= -->
    <HBox spacing="12"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20">

        <TextArea fx:id="messageInput"
                  prefHeight="80"
                  wrapText="true"
                  promptText="Napíšte správu..."
                  styleClass="data-row"/>

        <Button fx:id="sendButton"
                text="Odoslať"
                prefWidth="120"
                styleClass="primary-btn"
                onAction="#sendMessage"/>
    </HBox>

</AnchorPane>