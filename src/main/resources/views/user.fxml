<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.UserController"
            styleClass="root-pane">

    <!-- ================= HORNÁ LIŠTA ================= -->
    <top>
        <HBox spacing="16"
              alignment="CENTER_LEFT"
              styleClass="top-bar"
              prefHeight="70">

            <padding>
                <Insets top="14" right="24" bottom="14" left="24"/>
            </padding>

            <!-- ĽAVÁ STRANA -->
            <Button text="%user.top.terms"
                    onAction="#openScheduleWindow"
                    styleClass="primary-btn"/>

            <Button text="%user.top.messages"
                    onAction="#openMessageWindow"
                    styleClass="primary-btn"/>

            <Button fx:id="UserManagerButton"
                    text="%user.top.userManagement"
                    onAction="#openStatusWindow"
                    styleClass="primary-btn"/>

            <Button fx:id="ChangeDistrictButton"
                    text="%user.top.changeDistrict"
                    onAction="#openChageDistrict"
                    styleClass="primary-btn"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- PRAVÁ STRANA -->
            <Label styleClass="id-key"/>

            <ComboBox fx:id="languageBox"
                      styleClass="language-box"
                      prefWidth="110"/>

            <ToggleButton fx:id="themeToggle"
                          text="%user.top.theme"
                          onAction="#toggleTheme"
                          styleClass="theme-toggle"/>

            <Button text="%user.top.logout"
                    onAction="#Logout"
                    styleClass="danger-btn"/>
        </HBox>
    </top>

    <!-- ================= OBSAH ================= -->
    <center>
    <VBox alignment="CENTER"
          AnchorPane.topAnchor="90"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0">

        <!-- DIGITÁLNY PREUKAZ -->
        <VBox prefWidth="420"
              spacing="18"
              styleClass="id-card">

            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <!-- HLAVIČKA -->
            <HBox spacing="16" alignment="CENTER_LEFT">

                <ImageView fx:id="mainPhoto"
                           fitWidth="96"
                           fitHeight="120"
                           preserveRatio="true"
                           styleClass="id-photo"/>

                <VBox spacing="4">
                    <Label fx:id="nameLabel"
                           styleClass="id-name"/>
                    <Label fx:id="surnameLabel"
                           styleClass="id-surname"/>
                </VBox>
            </HBox>

            <Separator styleClass="id-separator"/>

            <!-- ÚDAJE -->
            <VBox spacing="12">

                <HBox spacing="10" styleClass="id-row">
                    <Label text="%user.card.birthDate"
                           styleClass="id-key"/>
                    <Label fx:id="birthDateLabel"
                           styleClass="id-value"/>
                </HBox>

                <HBox spacing="10" styleClass="id-row">
                    <Label text="%user.card.phone"
                           styleClass="id-key"/>
                    <Label fx:id="phoneLabel"
                           styleClass="id-value"/>
                </HBox>

                <HBox spacing="10" styleClass="id-row">
                    <Label text="%user.card.address"
                           styleClass="id-key"/>
                    <Label fx:id="addressLabel"
                           wrapText="true"
                           styleClass="id-value"/>
                </HBox>

                <HBox spacing="10" styleClass="id-row">
                    <Label text="%user.card.personalNumber"
                           styleClass="id-key"/>
                    <Label fx:id="personalNumberLabel"
                           styleClass="id-value"/>
                </HBox>

                <HBox spacing="10" styleClass="id-row">
                    <Label text="%user.card.status"
                           styleClass="id-key"/>
                    <Label fx:id="StatusLabel"
                           styleClass="id-value"/>
                </HBox>

            </VBox>

        </VBox>
    </VBox>
    </center>
</BorderPane>