<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.UserController">

    <HBox alignment="CENTER_RIGHT"
          prefHeight="100"
          style="-fx-border-color: black; -fx-border-width: 2;"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0">

        <Button prefHeight="60"
                prefWidth="250"
                onAction="#openTermWindow"
                style="-fx-border-color: black; -fx-border-width: 2;"
                text="Term">
            <HBox.margin>
                <Insets right="40.0"/>
            </HBox.margin>
        </Button>

        <Button prefHeight="60"
                prefWidth="250"
                onAction="#openMessageWindow"
                style="-fx-border-color: black; -fx-border-width: 2;"
                text="Message">
            <HBox.margin>
                <Insets right="50.0"/>
            </HBox.margin>
        </Button>
    </HBox>

    <Pane style="-fx-border-color: black; -fx-border-width: 2;"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="100">

        <ImageView fx:id="mainPhoto"
                   fitHeight="450"
                   fitWidth="350"
                   layoutX="80"
                   layoutY="80"
                   preserveRatio="true"
                   style="-fx-border-color: black; -fx-border-width: 3;"/>

        <Label fx:id="nameLabel"
               layoutX="550"
               layoutY="80"
               prefHeight="70"
               prefWidth="300"
               style="-fx-border-color: black; -fx-border-width: 2;"/>

        <Label fx:id="surnameLabel"
               layoutX="900"
               layoutY="80"
               prefHeight="70"
               prefWidth="300"
               style="-fx-border-color: black; -fx-border-width: 2;"/>

        <Label fx:id="birthDateLabel"
               layoutX="550"
               layoutY="180"
               prefHeight="70"
               prefWidth="300"
               style="-fx-border-color: black; -fx-border-width: 2;"/>

        <Label fx:id="phoneLabel"
               layoutX="900"
               layoutY="180"
               prefHeight="70"
               prefWidth="300"
               style="-fx-border-color: black; -fx-border-width: 2;"/>

        <Label fx:id="addressLabel"
               layoutX="550"
               layoutY="280"
               prefHeight="70"
               prefWidth="300"
               style="-fx-border-color: black; -fx-border-width: 2;"/>

        <Label fx:id="personalNumberLabel"
               layoutX="900"
               layoutY="280"
               prefHeight="70"
               prefWidth="300"
               style="-fx-border-color: black; -fx-border-width: 2;"/>
    </Pane>

</AnchorPane>
