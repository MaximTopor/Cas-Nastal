<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="1400" prefHeight="600"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.UserController"
            styleClass="root-pane">

    <!-- TOP BAR -->
    <HBox alignment="CENTER_RIGHT"
          spacing="16"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          styleClass="top-bar">

        <padding>
            <Insets top="14" right="24" bottom="14" left="24"/>
        </padding>

        <ToggleButton fx:id="themeToggle"
                      text="Theme"
                      onAction="#toggleTheme"
                      styleClass="theme-toggle"/>

        <Button text="Term"
                onAction="#openScheduleWindow"
                styleClass="primary-btn"/>

        <Button text="Message"
                onAction="#openMessageWindow"
                styleClass="primary-btn"/>
    </HBox>

    <!-- PASSPORT CARD -->
    <VBox AnchorPane.topAnchor="120"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          alignment="CENTER">

        <VBox prefWidth="420"
              spacing="18"
              styleClass="passport-card">

            <!-- HEADER -->
            <HBox spacing="14" alignment="CENTER_LEFT">
                <ImageView fx:id="mainPhoto"
                           fitWidth="110"
                           fitHeight="140"
                           preserveRatio="true"
                           styleClass="passport-photo"/>

                <VBox spacing="6">
                    <Label fx:id="nameLabel"
                           styleClass="passport-name"/>
                    <Label fx:id="surnameLabel"
                           styleClass="passport-surname"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- DATA -->
            <VBox spacing="12">

                <HBox styleClass="data-row">
                    <Label text="Date of birth: "/>
                    <Label fx:id="birthDateLabel"/>
                </HBox>

                <HBox styleClass="data-row">
                    <Label text="Phone: "/>
                    <Label fx:id="phoneLabel"/>
                </HBox>

                <HBox styleClass="data-row">
                    <Label text="Address: "/>
                    <Label fx:id="addressLabel" wrapText="true"/>
                </HBox>

                <HBox styleClass="data-row">
                    <Label text="Personal No.: "/>
                    <Label fx:id="personalNumberLabel"/>
                </HBox>

            </VBox>

        </VBox>
    </VBox>

</AnchorPane>
