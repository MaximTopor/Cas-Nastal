<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.UserManagerController"
            prefHeight="400"
            prefWidth="600"
            styleClass="root-pane">

    <BorderPane AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0">

        <right>
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="%userManager.title"
                       styleClass="passport-name"/>

                <Label text="%userManager.subtitle"
                       styleClass="passport-sub"/>

                <TextField fx:id="personalNumberSearchField"
                           promptText="%userManager.searchPersonalNumber"
                           onAction="#searchByPersonalNumber"/>

                <HBox spacing="10">
                    <Button text="%common.next"
                            styleClass="primary-btn"
                            onAction="#goNext"/>

                    <Button text="%common.back"
                            styleClass="primary-btn"
                            onAction="#goBack"/>
                </HBox>
            </VBox>
        </right>

        <center>
            <VBox spacing="10" prefWidth="220">
                <padding>
                    <Insets top="20" right="15" bottom="20" left="10"/>
                </padding>

                <Label text="%userManager.users"
                       styleClass="passport-name"/>

                <ComboBox fx:id="districtFilterBox"
                          prefWidth="200"/>

                <ListView fx:id="userListView"
                          VBox.vgrow="ALWAYS"/>
            </VBox>
        </center>

    </BorderPane>

</AnchorPane>
