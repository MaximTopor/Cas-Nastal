<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="700" prefHeight="650"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.RegisterController">

    <top>
        <HBox alignment="CENTER" prefHeight="70">
            <Label text="%register.title"
                   style="-fx-font-size: 22; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER">

            <Region prefWidth="150"/>

            <ScrollPane fitToWidth="true"
                        prefViewportHeight="400"
                        hbarPolicy="NEVER">

                <VBox spacing="12" prefWidth="350">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <TextField fx:id="emailField" promptText="%register.email"/>
                    <PasswordField fx:id="passwordField" promptText="%register.password"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="%register.confirm"/>

                    <TextField fx:id="nameField" promptText="%register.name"/>
                    <TextField fx:id="surnameField" promptText="%register.surname"/>

                    <DatePicker fx:id="birthDatePicker" promptText="%register.birthdate"/>

                    <ComboBox fx:id="regionComboBox"
                              promptText="%register.region"
                              prefWidth="350"/>

                    <TextField fx:id="localityField" promptText="%register.locality"/>
                    <TextField fx:id="addressField" promptText="%register.address"/>
                    <TextField fx:id="phoneField" promptText="%register.phone"/>

                </VBox>
            </ScrollPane>

            <Region prefWidth="150"/>

        </HBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button text="%register.create"
                    prefWidth="160"
                    onAction="#createAccount"/>

            <Button text="%register.login"
                    prefWidth="160"
                    onAction="#StepBackToLogin"/>
        </VBox>
    </bottom>
</BorderPane>
