<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="900" prefHeight="650"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.CreateTermController">

    <!-- ================= TOP ================= -->
    <top>
        <HBox alignment="CENTER" prefHeight="70">
            <Label
                    fx:id="titleLabel"
                    text="Create term"
                    style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <HBox spacing="40" alignment="CENTER">

            <Region prefWidth="150"/>

            <!-- FORM -->
            <VBox spacing="12" prefWidth="350">
                <TextField fx:id="typeField" promptText="Type"/>
                <DatePicker fx:id="datePicker" promptText="Date"/>

                <TextField fx:id="startTimeField" promptText="Start Time"/>
                <TextField fx:id="endTimeField" promptText="End Time"/>

                <TextField fx:id="addressField" promptText="Address"/>
                <TextField fx:id="capacityField" promptText="Capacity"/>
                <ComboBox fx:id="regionComboBox"
                          promptText="Region"
                          prefWidth="350"/>
            </VBox>

            <Region prefWidth="150"/>

        </HBox>
    </center>

    <!-- ================= BOTTOM ================= -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button
                    fx:id="createButton"
                    text="Create"
                    onAction="#onCreate"/>

            <Button text="Back"
                    prefWidth="160"
                    onAction="#backToSchedule"/>
        </VBox>
    </bottom>

</BorderPane>
