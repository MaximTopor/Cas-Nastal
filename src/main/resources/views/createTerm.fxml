<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="900" prefHeight="650"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.CreateTermController"
            styleClass="root-pane">

    <top>
        <HBox alignment="CENTER"
              prefHeight="70"
              styleClass="top-bar">

            <Label fx:id="titleLabel"
                   text="%createTerm.title"
                   styleClass="title-label"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="40" alignment="CENTER">

            <Region prefWidth="150"/>

            <VBox spacing="12"
                  prefWidth="360"
                  alignment="CENTER"
                  styleClass="form-card">

                <TextField fx:id="typeField" promptText="%createTerm.type"/>
                <DatePicker fx:id="datePicker" promptText="%createTerm.date"/>

                <TextField fx:id="startTimeField" promptText="%createTerm.startTime"/>
                <TextField fx:id="endTimeField" promptText="%createTerm.endTime"/>

                <TextField fx:id="addressField" promptText="%createTerm.address"/>
                <TextField fx:id="capacityField" promptText="%createTerm.capacity"/>

                <ComboBox fx:id="regionComboBox"
                          promptText="%createTerm.region"
                          prefWidth="360"
                          styleClass="form-combo"/>

            </VBox>

            <Region prefWidth="200"/>

        </HBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="12"
              styleClass="bottom-bar">

            <Button fx:id="createButton"
                    text="%createTerm.create"
                    styleClass="primary-btn"
                    onAction="#onCreate"/>

            <Button text="%common.back"
                    prefWidth="160"
                    styleClass="secondary-btn"
                    onAction="#backToSchedule"/>
        </VBox>
    </bottom>

</BorderPane>
