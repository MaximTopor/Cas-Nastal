<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.EditUserController"
            styleClass="root-pane"
            prefWidth="700"
            prefHeight="600">

    <!-- ===== TOP BAR ===== -->
    <HBox prefHeight="70"
          alignment="CENTER_LEFT"
          spacing="15"
          styleClass="top-bar"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets top="10" left="20" right="20" bottom="10"/>
        </padding>

        <Button text="â† Back"
                onAction="#back"
                styleClass="primary-btn"/>

        <Label text="Edit user"
               styleClass="passport-name"/>
    </HBox>

    <!-- ===== MAIN CARD ===== -->
    <VBox spacing="18"
          styleClass="passport-card"
          AnchorPane.topAnchor="90"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          AnchorPane.bottomAnchor="40">

        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- Name -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Name:" prefWidth="120"/>
            <TextField fx:id="nameField"/>
        </HBox>

        <!-- Surname -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Surname:" prefWidth="120"/>
            <TextField fx:id="surnameField"/>
        </HBox>

        <!-- Email -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Email:" prefWidth="120"/>
            <TextField fx:id="emailField"/>
        </HBox>

        <!-- Phone -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Phone:" prefWidth="120"/>
            <TextField fx:id="phoneField"/>
        </HBox>

        <!-- Address -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Address:" prefWidth="120"/>
            <TextField fx:id="addressField"/>
        </HBox>

        <!-- District -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="District:" prefWidth="120"/>
            <ComboBox fx:id="districtBox"/>
        </HBox>

        <!-- Role -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Role:" prefWidth="120"/>
            <ComboBox fx:id="roleBox"/>
        </HBox>

        <!-- Save -->
        <HBox alignment="CENTER">
            <Button text="Save changes"
                    onAction="#save"
                    styleClass="primary-btn"
                    prefWidth="200"/>
        </HBox>

    </VBox>

</AnchorPane>
