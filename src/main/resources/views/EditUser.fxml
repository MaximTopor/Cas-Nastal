<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.controller.EditUserController"
            styleClass="root-pane"
            prefWidth="700"
            prefHeight="600">

    <HBox prefHeight="70"
          alignment="CENTER_LEFT"
          spacing="15"
          styleClass="top-bar"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets top="10" left="20" right="20" bottom="10"/>
        </padding>

        <Button text="← Späť"
                onAction="#back"
                styleClass="primary-btn"/>

        <Label text="Úprava používateľa"
               styleClass="passport-name" />
    </HBox>

    <VBox spacing="18"
          styleClass="passport-card"
          AnchorPane.topAnchor="90"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          AnchorPane.bottomAnchor="40">

        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- Meno -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Meno:" prefWidth="120" styleClass="form-label"/>
            <TextField fx:id="nameField"/>
        </HBox>

        <!-- Priezvisko -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Priezvisko:" prefWidth="120" styleClass="form-label"/>
            <TextField fx:id="surnameField"/>
        </HBox>

        <!-- E-mail -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="E-mail:" prefWidth="120" styleClass="form-label"/>
            <TextField fx:id="emailField"/>
        </HBox>

        <!-- Telefón -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Telefón:" prefWidth="120" styleClass="form-label"/>
            <TextField fx:id="phoneField"/>
        </HBox>

        <!-- Adresa -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Adresa:" prefWidth="120" styleClass="form-label"/>
            <TextField fx:id="addressField"/>
        </HBox>

        <!-- Okres -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Okres:" prefWidth="120" styleClass="form-label"/>
            <ComboBox fx:id="districtBox" styleClass="form-combo"/>
        </HBox>

        <!-- Rola -->
        <HBox spacing="15" styleClass="data-row">
            <Label text="Rola:" prefWidth="120" styleClass="form-label"/>
            <ComboBox fx:id="roleBox" styleClass="form-combo"/>
        </HBox>

        <!-- Uloženie -->
        <HBox alignment="CENTER">
            <Button text="Uložiť zmeny"
                    onAction="#save"
                    styleClass="primary-btn"
                    prefWidth="200"/>
        </HBox>

    </VBox>

</AnchorPane>
