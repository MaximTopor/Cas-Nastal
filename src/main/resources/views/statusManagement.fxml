<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.upjs.paz.controller.StatusManagementController"
      spacing="18"
      styleClass="passport-card"
      prefWidth="420"
      prefHeight="320">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- ===== TITLE ===== -->
    <Label text="%status.title"
           styleClass="passport-name"/>

    <!-- ===== USER INFO ===== -->
    <VBox spacing="6">
        <!-- базовий текст можна лишити порожнім, а в контролері заповнювати -->
        <Label fx:id="userLabel"
               text="%status.user"/>

        <Label fx:id="statusLabel"
               text="%status.statusChange"/>
    </VBox>

    <!-- ===== REASON ===== -->
    <VBox spacing="6">
        <Label text="%status.reason"/>
        <TextArea fx:id="reasonField"
                  promptText="%status.reasonPrompt"
                  wrapText="true"
                  prefRowCount="4"/>
    </VBox>

    <HBox spacing="12"
          alignment="CENTER_RIGHT">

        <Button text="%common.cancel"
                onAction="#cancel"/>

        <Button text="%common.confirm"
                onAction="#confirm"
                styleClass="primary-btn"
                prefWidth="130"/>
    </HBox>

</VBox>
